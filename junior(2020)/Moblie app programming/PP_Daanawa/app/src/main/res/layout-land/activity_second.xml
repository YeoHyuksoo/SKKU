<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/gillsansb"
            android:textColor="#77FF11"
            android:textSize="40dp"
            android:text="DAANAWA" />

        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/gillsansb"
            android:textColor="#99FF11"
            android:textSize="25dp"
            android:text="No.1 computer estimating app" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mi1"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/s1" />

            <ImageView
                android:id="@+id/mi2"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/s2" />

            <ImageView
                android:id="@+id/mi3"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/s3" />

            <ImageView
                android:id="@+id/mi4"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/s4" />

            <ImageView
                android:id="@+id/mi5"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/s7" />

            <ImageView
                android:id="@+id/mi6"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/s6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#2196F3"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/pixelperson"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pixelperson" />
        </LinearLayout>

        <Button
            android:id="@+id/gomarket"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="#2196F3"
            android:fontFamily="@font/gillsansb"
            android:background="@drawable/rounded_button"
            android:text="GO MARKET" />

        <Button
            android:id="@+id/gobucket"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/gillsansb"
            android:text="GO MY BUCKET"
            android:textColor="#2196F3"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorPrimary"
        android:text="LOG OUT"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>