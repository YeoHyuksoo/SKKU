<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyPage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gillsansb"
            android:gravity="center"
            android:text="DAANAWA"
            android:textColor="#77FF11"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gillsansb"
            android:gravity="center"
            android:text="No.1 computer estimating app"
            android:textColor="#99FF11"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="#2196F3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/homebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RETURN TO HOME"
                android:textSize="13dp"
                android:fontFamily="@font/gillsansb"
                android:background="@drawable/rounded_button" />
            <Button
                android:id="@+id/logoutbtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LOG OUT"
                android:fontFamily="@font/gillsansb"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#990012"
            android:fontFamily="@font/gillsansl"
            android:textSize="35dp"
            android:text="Thank you for buying!" />

        <ImageView
            android:id="@+id/buyView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/buy" />

        <Button
            android:id="@+id/sendbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="SEND RECEIPT TO KAKAOTALK"
            android:textSize="20dp"
            android:fontFamily="@font/gillsansb"
            android:background="@drawable/rounded_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>